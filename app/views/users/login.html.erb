<% @page_title = "UserAuth | SignUp" %>
<h1>Login</h1>
<div>
  <%= form_for(:user, :url => {:controller => 'users', :action => 'login_attempt'}) do |f| %>
    <%= f.text_field :username_or_email, placeholder: 'Username or email' %>
    <%= f.password_field :login_password, placeholder: 'Password' %>
    <%= f.submit "Log in" %>
  <% end %>  
  <p>Need an account? <%= link_to "Sign Up", :action => 'new' %></p>
</div>
