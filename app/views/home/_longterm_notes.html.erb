<div id='longterm-notes-page-container'>
  <div id='longterm-notes-content'>
    <% if @longterm_notes != nil %>
      <% @longterm_notes.each do |note| %>
        <div class='longterm-note-title'>
          <%= link_to note.title, controller: "notes", action: "show", id: note.id %> 
        </div>
      <% end %>
    <% else %>
      <div>
        <a>No long term goals.</a>
      </div>
    <% end %>
  </div>
  <div id='longterm-notes-util'>
    <%#= link_to "Add", :controller => "home", :action => "create_note" , remote: true %> 
    <div id='add-longterm-notes-content'>
      <input type='button' value='Add' id='add-longterm-notes-button'/>
    </div>
    <div id='longterm-notes-show-link'>
      <%= link_to "->", controller: "notes", action: "longterm_index" %>
    </div>
  </div>
</div>
